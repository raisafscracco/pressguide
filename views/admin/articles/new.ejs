<%- include ("../../../views/partials/header.ejs"); %> <%- include
("../../../views/partials/navbar.ejs"); %>

<div class="container">
  <hr />
  <div class="card">
    <div class="card-header">
      <h2>New Article</h2>
    </div>
    <div class="card-body">
      <form method="POST" action="/articles/save">
        <input
          class="form-control"
          type="text"
          name="title"
          placeholder="Define the article's title."
        /><br />
        <textarea class="form-control" placeholder="Write the article here." name="body" id="article"></textarea><br>
        <label>Category</label>
        <select name="category" class="form-control">
            <% categories.forEach((category) => { %>
                <option value="<%= category.id %>"><%= category.title %></option>
            <% }) %>
        </select><br>
        <button class="btn btn-success">Register</button>
      </form>
    </div>
  </div>
</div>

<%- include ("../../../views/partials/footer.ejs"); %>

<script src="/tinymce/tinymce.min.js"></script>
<script>

tinymce.init({
  selector: "#article",
  license_key: 'gpl'
});

</script>