<%- include ("../../../views/partials/header.ejs"); %> <%- include
("../../../views/partials/navbar.ejs"); %>

<div class="container">
    <hr>
    <h2>Articles</h2>
    <a class="btn btn-success" href="/admin/articles/new">Create a New Article</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
           <% articles.forEach(article => { %>
                <tr>
                    <td><%= article.id %></td>
                    <td><%= article.title %></td>
                    <td><%= article.slug %></td>
                    <td><%= article.category.title %></td>
                    <td>
                    <form method="POST" action="/articles/delete" style="display: inline;" onsubmit="confirmDeletion(event, this)">
                        <input type="hidden" name="id" value="<%= article.id %>">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
                </tr>
           <% }) %>
        </tbody>
    </table>
</div>

<%- include ("../../../views/partials/footer.ejs"); %>

<script>
    function confirmDeletion(event, form) {
        event.preventDefault();
        var decision = confirm("Do you want to delete this article?");
        if(decision) {
            form.submit();
        }
    };
</script>